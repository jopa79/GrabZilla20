{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GrabZilla 2.0",
  "version": "2.0.0",
  "identifier": "com.grabzilla.app",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "GrabZilla 2.0",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "GrabZilla Team",
    "copyright": "Copyright Â© 2024 GrabZilla Team. All rights reserved.",
    "category": "Productivity",
    "shortDescription": "Professional video downloader and transcoding tool",
    "longDescription": "GrabZilla 2.0 is a professional-grade video downloading and transcoding application designed for content creators and production teams. Features include batch downloading, professional codec support, and intelligent URL extraction.",
    "externalBin": [],
    "windows": {
      "certificateThumbprint": "",
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": ["en-US"],
        "template": "main.wxs",
        "fragmentPaths": [],
        "componentGroupRefs": [],
        "componentRefs": [],
        "featureGroupRefs": [],
        "featureRefs": [],
        "mergeRefs": []
      },
      "nsis": {
        "template": "installer.nsi",
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["English"],
        "displayLanguageSelector": false
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": "",
      "entitlements": "entitlements.plist",
      "hardenedRuntime": true
    },
    "linux": {
      "deb": {
        "depends": ["libgtk-3-0", "libwebkit2gtk-4.0-37"],
        "priority": "optional",
        "section": "utils"
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "",
      "endpoints": [
        "https://example.com/update.json"
      ]
    }
  }
}
